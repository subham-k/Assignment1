<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:id="@+id/androidApp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Android App Devlopment"
                android:textSize="17dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/iosApp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="IOS App Devlopment"
                android:textSize="17dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:id="@+id/ai"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Artifical Intelligence"
                android:textSize="17dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/webDevelopment"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Web  Development"
                android:textSize="17dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:id="@+id/blockChain"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Blockchain"
                android:textSize="17dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dataAnalytic"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Data   Analytics"
                android:textSize="17dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/contactUs"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:fontFamily="monospace"
        android:text="Contact Us" />


</LinearLayout>

